<main>
    <div class="swiper-slide swiper-lazy swiper-lazy-loaded swiper-slide-active" style="height:550px;
                        
                        background-repeat: no-repeat;
                        background-attachment: fixed;
                        background-size:100%;
                        display: flex; justify-content: center;">
        <div style="width: 50%;">
            <form action="/admin/quanlisanpham/trahang/addtrahang/{{id}}" , method="POST">
                <div class="card">
                    <!--Header-->
                    <div class="header p-3 mt-3 peach-gradient">
                        <div class="row d-flex justify-content-center">
                            <h3 class="white-text font-weight-bold">Thêm mặt hàng vào đơn trả hàng</h3>
                        </div>
                    </div>
                    <span style="color: rgb(136, 136, 252); margin-left:25px;">{{success}}</span>
                    <div class="card-body mx-1 mt-1">
                    </div>
                    <span style="color: rgb(204, 0, 10); margin-left:25px;">{{thongbao}}</span>
                    <div class="card-body mx-1 mt-1">
                        <!--Body-->

                        <div class="md-form">
                            <div style="padding-top: 20px; margin-bottom: 0px;padding-bottom: 20px;">
                                <label for="">Mặt Hàng </label>
                                <select name="mathang">
                                    {{#each mathang}}
                                    <option value="{{MaMatHang}}">{{TenMatHang}}</option>
                                    {{/each}}
                                </select>
                            </div>
                        </div>
                        <div class="md-form">
                            <label for="Form-name">Số lượng</label></br>
                            <input type="number" id="Form-name" name="soluong" class="form-control">
                        </div>
                        <div class="md-form">
                            <label for="Form-name">Tổng tiền</label></br>
                            <input type="number" id="Form-name" name="tongtien" class="form-control">
                        </div>
                        <!--Grid row-->
                        <div class="row">
                            <!--Grid column-->
                            <div class="text-center" style="margin-left:20px;margin-top:20px;">
                                <div class="text-center">
                                    <button type="submit" class="btn btn-danger">Thêm mặt hàng vào đơn</button>
                                </div>
                            </div>

                            <div class="text-center" style="margin-left:20px;margin-top:20px;">
                                <div class="text-center">
                                    <a class="btn " href="/admin/quanlisanpham/trahang/addmathang">Hủy bỏ</a>
                                </div>
                            </div>

                            <!--Grid column-->
                        </div>
                        <!--Grid row-->
                    </div>
            </form>

        </div>
    </div>
</main>